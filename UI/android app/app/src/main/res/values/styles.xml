<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- <item name="android:background">@color/background</item> -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/action_bar_bg</item>
        
    </style>

    <style name="tab_btn" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/btn_tab</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/tab_color</item>
    </style>
    <style name="tab_btn_small" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/btn_tab_small</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/tab_color</item>
    </style>
    
    <style name="tab_btn_bottom" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@drawable/btn_tab_bottom</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/trans_draw</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="custom_switch" >
        <item name="android:textStyle">bold</item>
        <item name="android:thumb">@drawable/swith_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
    </style>
    <style name="yellow_btn" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/tab_bg_yellow</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="lbl_new_act_left" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="lbl_new_act_right" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/tab_bg_yellow</item>
    </style>
    <style name="btn_dark" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/theme_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btn_yellow" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/tab_bg_yellow</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="lbl_workout1" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="lbl_workout2" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_dk</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
